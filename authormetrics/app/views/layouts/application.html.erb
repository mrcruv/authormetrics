<!DOCTYPE html>
<html>
  <head>
    <title>authormetrics</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    
  </head>

  <body>
    <%= yield %> 
    <%= link_to "Logout", destroy_user_session_path, :method => :delete if user_signed_in? %>
    <%= link_to "Logout", destroy_administrator_session_path, :method => :delete if administrator_signed_in? %>
    <p>
      <%= "logged in as: "+current_user["username"] if user_signed_in? %>
      <%= "logged in as: "+current_administrator["username"] if administrator_signed_in? %>
    </p>


    <% if user_signed_in? %>
      Logged in as (<%= current_user.id %>) <%= current_user.username %> - <%= current_user.email%> [<%= link_to 'Logout',
      destroy_user_session_path, :method => :delete%>]
    <% end %>

  </body>
</html>

