<p style="color: green"><%= notice %></p>

<h1>Favorite authors</h1>

<div id="favorite_authors">
  <% @favorite_authors.each do |favorite_author| %>
    <%= render favorite_author %>
    <p>
      <%= favorite_author.author_id %>
      <%= link_to "Show", author_path(favorite_author.author_id) %>
      <%= link_to 'Destroy author', destroy_user_favorite_author_path(favorite_author.author_id, favorite_author.user_id), method: :delete %>
    </p>
  <% end %>
</div>

<%= link_to "New favorite author", new_user_favorite_author_path %>
<%= link_to "Back to user", users_path %>
