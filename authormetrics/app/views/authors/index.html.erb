<p style="color: green"><%= notice %></p>
<div class="block">
  <h1 style="color: red">Search Authors</h1>
  <div   class="upper_block">
    <button onclick= "searchByauth()" id= "ByAuth"> SEARCH BY AUTH</button>
    <button onclick="location.href='http://127.0.0.1:3000/'" > BACK TO HOME </button> 
    <p id="p1"> </p>
  </div>
  <div id="authors">
    <% @authors.each do |author| %>
      <% if author.interests != nil%>
      <% s=Strings.new %>
      <% author.interests=s.to_hash(author.interests) %>
      <% end %>
      <%= render author %>
      <p>
        <%= " ---------------------------"%>
      </p>
    <% end %>
  </div>
</div>

<%= javascript_include_tag "home" %>
<%= javascript_include_tag "application" %>
