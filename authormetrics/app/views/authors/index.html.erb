<p style="color: green"><%= notice %></p>
<div>
  <h1 style="color: red">Search Authors</h1>
  <div>
    <button onclick= "searchByauth3()" id= "ByAuth3"> SEARCH BY AUTH</button>
    <button onclick="location.href='http://127.0.0.1:3000/'" > BACK TO HOME </button> 
    <p id="p3"> </p>
  </div>
  <div id="authors">
    <% @authors.each do |author| %>
      <% if author.interests != nil%>
      <% s=Strings.new %>
      <% author.interests=s.to_hash(author.interests) %>
      <% end %>
      <%= render author %>
      <p>
        <%= " ---------------------------"%>
      </p>
    <% end %>
  </div>
</div>
