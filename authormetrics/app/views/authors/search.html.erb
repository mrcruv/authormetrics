<p style="color: green"><%= notice %></p>

<h1 style="color: red">Search Authors</h1>
<button onclick= "searchByAuth()" id= "ByAuth" > NEW AUTH SEARCH</button>
<button onclick="location.href='https://127.0.0.1:3000/'" > back to home </button> 

<div id="authors">
  <% @authors.each do |author| %>
    <% if author.interests != nil%>
    <% s=Strings.new %>
    <% author.interests=s.to_hash(author.interests) %>
    <% end %>
    <%= render author %>
    <p>
      <%= " ---------------------------"%>
    </p>
  <% end %>
</div>

