<div id="<%= dom_id author %>">

  <p>
    <strong>Name:</strong>
    <%= author.name %>
  </p>

  <p>
    <strong>Affiliations:</strong>
    <%= author.affiliations %>
  </p>
  <p>
    
    <% if author.interests != [] && author.interests!= nil %>
    <strong>interests:</strong>
      <% JSON.parse(author.interests).each do |k|%>
        <% k.each do |kk,vv|%>
        <div>
        <p>   
          <%= "\n"+kk+":" %>
          <%= "\t"+vv+"\n" %>
          
        </p>
        </div>
        <%end%>
        <%="---------------"%>
      <%end%>
    <%end%>
    
  </p>

</div>
