<p style="color: green"><%= notice %></p>

<%= render @publication %>

<div>
  <%if @comments != [] || @comments != nil%>
    <% @comments.each do |com| %>
      <h1><% r=User.find(com.user_id)%></h1>
      <p>
      <strong><%= r.username %>:</strong>
      <%= com.comment %>
      </p>
    <%end%>
  <%end%>
</div>

<div>
  <%= link_to "View other publications", publications_path %>
</div>
<%if(params[:id].count(":")>0)%>
  <div>
    <%= link_to "Go to Author", author_path%>
  </div>
<%end%>


<h2>RATING:</h2><%= @avg_ratings_2%>

<!--if in author_ratings not exist record con current_user.id -->
<%if user_signed_in?%>
<%= link_to "ADD PUBLICATION RATING", publication_publication_ratings_path(@publication)%>
<%end%>
