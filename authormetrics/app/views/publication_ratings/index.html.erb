<h1>Publication ratings</h1>

<div id="publication_ratings">
  <% @publication_ratings.each do |publication_rating| %>
    <%= render publication_rating %>
    <p>
    <%= link_to "show publication",[@publication] %>
    <%= link_to "Edit publication rating", edit_publication_publication_rating_path(publication_rating.publication_id,publication_rating.user_id)%>
      
      <%= link_to 'Destroy rating', destroy_publication_publication_rating_path(publication_rating.publication_id,publication_rating.user_id), method: :delete %>
    </p>
  <% end %>
</div>

<%= link_to "New publication rating", new_publication_publication_rating_path(@publication)%>
